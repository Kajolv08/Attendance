<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF323A7F"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context=".MyBoard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="140dp"
            android:drawableLeft="@drawable/ic_home_black_24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/CV1"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                android:drawableTop="@drawable/ic_group_black_24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Attendace"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:textColor="#FF323A7F"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/CV2"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/ic_person_outline_black_24dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="View Profile"
                android:layout_marginTop="75dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="25sp"
                android:textColor="#FF323A7F"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="5dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/CV3"
            android:layout_margin="5dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/ic_settings"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Student"
                android:layout_marginTop="75dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="25sp"
                android:textColor="#FF323A7F"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="2"

        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_margin="5dp"
            android:id="@+id/CV4"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/ic_information"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Information"
                android:layout_marginTop="75dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="25sp"
                android:textColor="#FF323A7F"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layout_margin="5dp"
            android:id="@+id/CV5"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/ic_exit"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LogOut"
                android:layout_marginTop="75dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="50dp"
                android:textSize="25sp"
                android:textColor="#FF323A7F"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</LinearLayout>