<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#FF323A7F"
    tools:context=".Information">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#fff"
            android:text="How Attendance Application works."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:weightSum="5"
        android:layout_marginBottom="100dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You can easily list out students courses and their corresponding attendance time."
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You can easily Add STudent Details. In which student's Phone Number, Email Id you can Add."
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="In Add Student,You can enter name of student,  In which class they are and their Division too. "
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You can check profile of Students with Photograph"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="There is also an additional option with the app to check"
            android:textColor="#fff"
            android:layout_weight="1"
            android:textSize="18sp"/>


    </LinearLayout>
</LinearLayout>